<!DOCTYPE html>
<html>
  <head>
    <title>Dracks</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class='background'>
    <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
    	<div class='container'>
				<%= link_to 'Dracks', root_path, class: 'navbar-brand'  %>
				<ul class="nav navbar-nav">
					<li class="nav-item">
						<%= link_to 'Blog', posts_path, class: 'nav-link'  %>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="https://www.youtube.com/channel/UCj_Tfkon3cVp_rc3w6zemkw">Youtube</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="https://www.twitch.tv/dr4ck5">Twitch</a>
					</li>
				</ul>
				<ul class="nav navbar-nav pull-xs-right">
					<% if user_signed_in? %>
						<li class="nav-item">
					  	<%= link_to 'Profile', edit_user_registration_path, class: 'nav-link' %>
					  </li>
					  <li class="nav-item">
					  	<%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link'  %>        
					  </li>
					<% else %>
					  <li class="nav-item">
					  	<%= link_to 'Login', new_user_session_path, class: 'nav-link'  %>  
					  </li>
					<% end %>
				</ul>
  		</div>
    </nav>
    <div class='container foreground'>
    	<%= yield %>
	</div>
  </body>
</html>
